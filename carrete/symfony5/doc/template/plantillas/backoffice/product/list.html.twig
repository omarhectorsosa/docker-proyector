{% extends 'backoffice/layout/backoffice_layout.html.twig' %}

{% block content %}
<section class="section dashboard">
<div class="row">
    <div class="col-md-12">

        <div class="x_content">
          <div class="row mb-2">
            <div class="col-md-8">
              <a href="{{ path('app_backoffice_product_new') }}" class="btn btn-success">	{{ "backoffice.global.button_new"|trans }}</a>
            </div>  
          </div>  
        </div>
        {% if products ?? false %}
        <div class="x_content">
            <div class="row">
              <table id="example" class="display table table-striped table-bordered dataminetables">
                <thead>
                  <th><input type="checkbox" id="select_all" name="select_all"></th>
                  <th>{{ "backoffice.product.name"|trans }}</th>
                  <th>{{ "backoffice.product.description"|trans }}</th>
                  <th>{{ "backoffice.product.price"|trans }}</th>
                  <th>{{ "backoffice.product.state"|trans }}</th>
                  <th>{{ "backoffice.product.modifier"|trans }}</th>
                  <th>{{ "backoffice.product.delete"|trans }}</th>
                  
                </thead>
                <tbody>
                  {% for product in products %}
                    <tr>
                      <td><input type="checkbox" class="chkgrp" name="chkgrp[]" value="{{ product.id }}"></td>
                      <td><a href="{{ path('app_backoffice_product_show', {'id': product.id}) }}">{{ product.name }}</a></td>
                      <td><a href="{{ path('app_backoffice_product_show', {'id': product.id}) }}">{{ product.description }}</a></td>
                      <td><a href="{{ path('app_backoffice_product_show', {'id': product.id}) }}">{{ product.price }}</a></td>
                      <td><a href="{{ path('app_backoffice_product_show', {'id': product.id}) }}">{{ product.state.name }}</a></td>
                      <td>
                        <a class="btn btn-primary" href="{{ path('app_backoffice_product_edit', {'id': product.id}) }}">
                          <i class="bi bi-pencil-square"></i>
                        </a>
                      </td>
                      <td>
                        <a href="{{ path('app_backoffice_product_delete', {'id': product.id}) }}" class="btn btn-danger disable-btn del-link" type="submit">
                          <i class="bi bi-x-square"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
        {% endif %}
    </div>
</div>
</section>
{% endblock %}
